<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#FFFFFF" >

    <ImageView
        android:id="@+id/video"  android:gravity="center|left"
        android:layout_width="35dp" android:layout_marginRight="5dp"
        android:layout_height="35dp"   android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/video_open" />

    <ImageView android:id="@+id/redio"
        android:layout_marginRight="10dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/video"
        android:gravity="right|center"
        android:src="@drawable/call" />

    <TextView
        android:id="@+id/childto"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:textColor="#000000"
        android:textSize="15sp" />

</RelativeLayout>