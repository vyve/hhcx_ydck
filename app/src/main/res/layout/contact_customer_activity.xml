<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/cardview">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <!-- 将@dimen/head 的值由60改为48
         颜色由@color/red 换为#272853-->
        <TextView
            android:id="@+id/tv_title"
            android:text="联系客户"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/wordColor"
            android:textSize="16.7sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/contact_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/contact_back"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="客户名称:"
                android:textColor="@color/wordColor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="55dp"
                android:gravity="center|left"
                android:text=""
                android:textColor="@color/wordColor2"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/head"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="客户电话:"
                android:textColor="@color/wordColor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/contact_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:gravity="center|left"
                android:text=""
                android:textColor="@color/wordColor2"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/contact_phone_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@mipmap/task_case_call" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/head"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="拨打时长:"
                android:textColor="@color/wordColor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/contact_time"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:gravity="center|left"
                android:textColor="@color/wordColor"
                android:textSize="12sp"
                android:text="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/head"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="38dp"
                android:gravity="center|left"
                android:text="秒"
                android:textColor="@color/wordColor2"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="预计到达:"
                android:textColor="@color/wordColor"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/contact_arrive_time"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:gravity="center|left"
                android:hint=""
                android:inputType="number"
                android:maxLength="3"
                android:maxLines="1"
                android:textColor="@color/wordColor"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="23dp"
                android:text="分钟"
                android:textColor="@color/wordColor2"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d4d4d4"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/contact_cancel"
            android:layout_width="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textSize="14sp"
            android:textColor="@color/wordColor"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/contact_line"/>
        <TextView
            android:id="@+id/contact_comfirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textSize="14sp"
            android:textColor="@color/wordColor"/>
    </LinearLayout>
</LinearLayout>
