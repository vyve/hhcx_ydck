<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:id="@+id/rlall"
    android:visibility="gone"
    android:layout_height="wrap_content">

    <com.estar.hh.survey.view.component.video.ProgressBarCircularIndetermininate
        android:id="@+id/progressBarCircularIndetermininate"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="#1E88E5"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/average_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/progressBarCircularIndetermininate"
        android:text="平均速度"
        android:textColor="#616161"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/now_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/progressBarCircularIndetermininate"
        android:layout_toLeftOf="@id/average_speed"
        android:text=" 当前速度"
        android:layout_alignParentLeft="true"
        android:textColor="#616161"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/spd"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/now_speed"
        android:layout_marginLeft="5dp"
        android:textSize="17sp"
        android:textColor="#616161" />

</RelativeLayout>
