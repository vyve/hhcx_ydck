<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/title_bar">

        <LinearLayout
            android:id="@+id/change_phone_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/back_arrow"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textColor="@color/all_white"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号改绑"
            android:textColor="@color/all_white"
            android:textSize="16sp"
            android:layout_gravity="center"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/all_white">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="原手机号"
            android:textSize="14sp"
            android:textColor="@color/wordColor"
            android:layout_marginLeft="16dp"/>

        <EditText
            android:id="@+id/change_phone_old_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text=""
            android:textSize="12sp"
            android:textColor="@color/wordColor1"
            android:hint="请输入原手机号"
            android:textColorHint="@color/editColor"
            android:layout_marginLeft="18dp"
            android:maxLength="11"
            android:inputType="number"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/all_white">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="新手机号"
            android:textSize="14sp"
            android:textColor="@color/wordColor"
            android:layout_marginLeft="16dp"/>

        <EditText
            android:id="@+id/change_phone_new_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text=""
            android:textSize="12sp"
            android:textColor="@color/wordColor1"
            android:hint="请输入新手机号"
            android:textColorHint="@color/editColor"
            android:layout_marginLeft="18dp"
            android:maxLength="11"
            android:inputType="number"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/all_white"
        android:visibility="gone">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textSize="14sp"
            android:textColor="@color/wordColor"
            android:layout_marginLeft="16dp"/>

        <EditText
            android:id="@+id/change_phone_check_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text=""
            android:textSize="12sp"
            android:textColor="@color/wordColor1"
            android:hint="请输入验证码"
            android:textColorHint="@color/editColor"
            android:layout_marginLeft="18dp"
            android:inputType="number"
            android:maxLength="6"/>

        <Button
            android:id="@+id/change_phone_get_check"
            android:layout_width="86dp"
            android:layout_height="26dp"
            android:text="获取验证码"
            android:textColor="@color/all_white"
            android:textSize="12sp"
            android:layout_marginRight="12dp"
            android:background="@drawable/button_orange_kind"/>

    </LinearLayout>

    <Button
        android:id="@+id/change_phone_submit"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="29.3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_lan_kind"
        android:text="提交"
        android:textColor="@color/all_white"
        android:textSize="16sp" />

</LinearLayout>