        />
    <TextView 
        android:id="@+id/cardType_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        /-->
	
    <ImageButton
        android:id="@+id/OK_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ok_btn" />
    <!--ImageButton
        android:id="@+id/buy_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buy_btn_show" /-->

    <TextView 
        android:id="@+id/surplusTimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
</RelativeLayout>