<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/re_c"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.estar.ocr.vin.vincode.NewVinOcrActivity" >


    <com.flurgle.camerakit.CameraView
        xmlns:app= "http://schemas.android.com/apk/res-auto"
        android:id="@+id/cameraView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        app:ckCropOutput="false"
        app:ckFacing="back"
        app:ckFlash="off"
        app:ckFocus="continuous"
        app:ckJpegQuality="100"
        />

    <ImageButton
        android:id="@+id/tackPic_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/tack_pic_btn"
        android:visibility="gone"/>
    <ImageButton
        android:id="@+id/flash_camera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/tackPic_btn"
        android:layout_marginBottom="30dp"
        android:background="@drawable/flash_camera_btn"
        android:visibility="gone"/>
    <ImageButton
        android:id="@+id/select"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tackPic_btn"
        android:layout_marginTop="30dp"
        android:background="@drawable/icon_pic_2"
        android:visibility="gone"/>
</RelativeLayout>